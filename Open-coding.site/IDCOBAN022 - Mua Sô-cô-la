#include <bits/stdc++.h>
#define ll long long
#define fi first
#define se second
#define f(i,a,b) for(int i=a; i<=b; ++i)
#define fn(i,a,b) for(int i=a; i>=b; --i)
const int MOD=1e9+7;
using namespace std;

ll t, x, y, m;
int main() {
ios_base::sync_with_stdio(false); cin.tie(0); cout.tie(0);
  cin >> t;
  while(t--){
    cin >> x >> y >> m;
    ll ans=m/x;
    ll vo=ans;
    while(vo>=y){
      ll doi=vo/y;
      ans+=doi;
      vo-=doi*y;
      vo+=doi;
    }
    cout<<ans<<'\n';
  }
return 0;
}
